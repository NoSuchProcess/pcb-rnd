append /local/pcb/export_png/enable {}
append /local/pcb/export_png/buildin {}

put /local/pcb/mod {export_png}
put /local/pcb/mod/OBJS [@ $(PLUGDIR)/export_png/png.o @]
put /local/pcb/mod/LDFLAGS         libs/gui/gd/ldflags
put /local/pcb/mod/CFLAGS          libs/gui/gd/cflags

if /local/pcb/export_png/enable then
	if /local/pcb/export_png/buildin then
		include {Makefile.in.mod/Buildin}
	else
		include {Makefile.in.mod/Plugin}
	end
else
	include {Makefile.in.mod/Disable}
end
