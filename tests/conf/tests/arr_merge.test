echo === initial state: empty ===
reset *
dump native appearance/color/layer

echo === import 3 levels ===
paste system \
	li:pcb-rnd-conf-v1 { \
		ha:overwrite { \
			ha:appearance { \
				ha:color { \
					li:layer = { sys1; sys2 } \
				} \
			} \
		} \
	}
dump native appearance/color/layer

paste user \
	li:pcb-rnd-conf-v1 { \
		ha:overwrite { \
			ha:appearance { \
				ha:color { \
					li:layer = { user1; user2 } \
				} \
			} \
		} \
	}
dump native appearance/color/layer

paste design \
	li:pcb-rnd-conf-v1 { \
		ha:overwrite { \
			ha:appearance { \
				ha:color { \
					li:layer = { design1; design2 } \
				} \
			} \
		} \
	}
dump native appearance/color/layer

echo === change policy: design->prepend (design, user) ===
role design
chpolicy prepend
dump native appearance/color/layer

echo === change policy: user->append (design, sys, user) ===
role user
chpolicy append
dump native appearance/color/layer

echo === change policy: design->append (sys, user, design) ===
role design
chpolicy append
dump native appearance/color/layer
