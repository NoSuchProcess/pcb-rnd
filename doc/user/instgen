#!/bin/sh
find 0*_* *.html *.css -type f -print | awk '
BEGIN {
	print "### autogenerated, DO NOT EDIT (but do commit); run make regen on *NIX ###"
	print "install_all:"
}
($0 ~ "[/][.]") { next }
($0 ~ "[/]src[/]") { next }
/[.]bak$/ { next }
/[.]backup$/ { next }
/~$/ { next }

($0 ~ "/") {
	path = $0
	sub("/[^/]*$", "", path)
	if (!(path in PATHS)) {
		print "	$(SCCBOX) mkdir -p $(USERDIR)/" $0
		PATHS[path]=1
	}
}

{
	print "	$(SCCBOX) $(HOW) " $0 " $(USERDIR)/" $0
}
' > Makefile.inst
