SRC_3RD_DIR=../src_3rd

@/local/pcb/TOPVARS@
OBJS=@/local/pcb/OBJS@
OBJS_C99=@/local/pcb/OBJS_C99@
SRCS=@/local/pcb/SRCS@
CFLAGS=@/local/pcb/CFLAGS@
C89FLAGS=@/local/pcb/c89flags@ @/local/pcb/CFLAGS@
