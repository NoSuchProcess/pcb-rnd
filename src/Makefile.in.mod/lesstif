# lesstif2 options
if /target/libs/gui/lesstif2/presents then

append /local/pcb/CFLAGS [@
	-I./hid/lesstif
	@/target/libs/gui/lesstif2/cflags@
	@/target/libs/gui/xinerama/cflags@
	@/target/libs/gui/xrender/cflags@
@]

append /local/pcb/LIBS [@
	@/target/libs/gui/lesstif2/ldflags@
	@/target/libs/gui/xinerama/ldflags@
	@/target/libs/gui/xrender/ldflags@
@]

append /local/pcb/OBJS  [@
	hid/lesstif/dialogs.o
	hid/lesstif/library.o
	hid/lesstif/main.o
	hid/lesstif/menu.o
	hid/lesstif/netlist.o
	hid/lesstif/styles.o
@]

append /local/pcb/ACTION_REG_SRC  [@
	hid/lesstif/library.c
	hid/lesstif/menu.c
	hid/lesstif/main.c
	hid/lesstif/styles.c
	hid/lesstif/dialogs.c
	hid/lesstif/netlist.c
	hid/lesstif/hid.conf
@]
end
